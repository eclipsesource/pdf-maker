{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES6",
    "lib": ["ES2021", "DOM"],
    "outDir": "dist",
    "paths": {
      "src/*": ["./src/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "src/**/test/", "src/**/*.test.ts"]
}
